{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.3.0",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eruda": "^2.10.0",
    "eslint": "^8.27.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lerna": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.5",
    "rollup-plugin-serve": "^2.0.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "build": "lerna run build",
    "build:no-cache": "lerna run build --skip-nx-cache",
    "bridge:dev": "lerna run --scope=@twa.js/bridge dev",
    "bridge:build": "lerna run --scope=@twa.js/bridge build",
    "commit": "git cz",
    "ci:lint": "lerna run lint",
    "ci:build": "lerna run build --skip-nx-cache",
    "ci:docs:install": "pnpm i --filter documentation",
    "ci:docs:build": "lerna run build --scope=documentation",
    "ci:packages:build": "lerna run build --ignore=documentation --skip-nx-cache",
    "ci:packages:publish": "lerna publish --no-private -y",
    "ci:test": "lerna run test",
    "docs:dev": "lerna run --scope=documentation start",
    "docs:deploy": "lerna run --scope=documentation deploy",
    "docs:build": "lerna run --scope=documentation build",
    "publish": "lerna publish",
    "sdk:build": "lerna run --scope=@twa.js/sdk build",
    "sdk:dev": "lerna run --scope=@twa.js/sdk dev",
    "sdk-react:dev": "lerna run --scope=@twa.js/sdk-react dev",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "utils:dev": "lerna run --scope=@twa.js/utils dev",
    "utils:build": "lerna run --scope=@twa.js/utils build"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

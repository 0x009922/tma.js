{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "rollup": {
      "dependsOn": ["^rollup"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "cache": true
    },
    "test": {
      "cache": true
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}

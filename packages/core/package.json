{
  "name": "twa-core",
  "version": "0.0.26",
  "description": "Web Apps core TypeScript utilities, which are reused in other packages of ecosystem.",
  "author": "Vladislav Kibenko <wolfram.deus@gmail.com>",
  "homepage": "https://github.com/Telegram-Web-Apps/sdk/packages/core#readme",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "browser": "dist/browser.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "web": "./dist/index.mjs",
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Telegram-Web-Apps/sdk.git"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "build": "rimraf dist && rollup --config rollup.config.js",
    "commit": "cz",
    "prerelease": "npm-run-all test lint build",
    "release": "standard-version -a",
    "postrelease": "git push --follow-tags origin master && yarn publish --non-interactive"
  },
  "bugs": {
    "url": "https://github.com/Telegram-Web-Apps/sdk/issues"
  },
  "devDependencies": {
    "@jest/globals": "^29.2.2",
    "@rollup/plugin-typescript": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.26.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
